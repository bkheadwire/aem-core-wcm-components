<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Video"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[core.wcm.components.teaser.v1.editor]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container"
        granite:class="cmp-video__editor">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <asset
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Asset"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldLabel="Video Asset"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReference"
                                                mimeTypes="[video/3gpp,video/x-flv,video/mp4,video/ogg,video/webm]"
                                                multiple="{Boolean}false"
                                                name="./file"
                                                title="Choose Video Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </asset>
                    <metadata
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Metadata"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <titleGroup
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <title
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="A title identifying the video."
                                                        fieldLabel="Title"
                                                        name="./jcr:title"/>
                                                    <titleValueFromDAM
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        checked="${not empty cqDesign.titleValueFromDAM ? cqDesign.titleValueFromDAM : true}"
                                                        fieldDescription="When checked, populate the video's title with the value of the dc:title metadata in DAM."
                                                        name="./titleValueFromDAM"
                                                        text="Get title from DAM"
                                                        uncheckedValue="false"
                                                        value="{Boolean}true"/>
                                                </items>
                                            </titleGroup>
                                            <descriptionGroup
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <description
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Text describing the contents of the video."
                                                        fieldLabel="Description"
                                                        name="./jcr:description"/>
                                                    <descriptionValueFromDAM
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        checked="${not empty cqDesign.descriptionValueFromDAM ? cqDesign.descriptionValueFromDAM : true}"
                                                        fieldDescription="When checked, populate the video's description text with the value of the dc:description metadata in DAM."
                                                        name="./descriptionValueFromDAM"
                                                        text="Get description from DAM"
                                                        uncheckedValue="false"
                                                        value="{Boolean}true"/>
                                                </items>
                                            </descriptionGroup>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </metadata>
                    <options
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Video Options"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <autoplay
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}false"
                                                fieldDescription="When checked, videos will autoplay when loaded."
                                                name="./autoplay"
                                                text="Autoplay"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                            <loop
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}false"
                                                fieldDescription="When checked, video playback will loop upon completion."
                                                name="./loop"
                                                text="Loop"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                            <hideControls
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}false"
                                                fieldDescription="When checked, the video controls will not be displayed."
                                                name="./hideControls"
                                                text="Hide Controls"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                            <preload
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Preload"
                                                fieldDescription="Suggests to the browser what content (if any) the video player should load before the video is played."
                                                name="./preload">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <none
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Disable Preloading"
                                                        value="none"
                                                        default="{Boolean}true"/>
                                                    <auto
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Preload Everything"
                                                        value="auto"/>
                                                    <metadata
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Only Preload Metadata"
                                                        value="metadata"/>
                                                </items>
                                            </preload>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </options>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
